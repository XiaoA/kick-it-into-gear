<h1>Tasks</h1>

<div class="container">
  <h3 class="text-center">Tasks</h3>
  <div class="row">
    <% Task.all.each do |task| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to task.title, task_path(task) %></h5>
            <p class="card-text"><%= task.description %></p>
            <%= link_to "View Details", task_path(task), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>


